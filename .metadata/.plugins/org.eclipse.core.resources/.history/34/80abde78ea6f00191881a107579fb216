package com.carAgency;

import java.util.ArrayList;

public class Report {
	private ArrayList<Branch> brnchs = new ArrayList<Branch>();
	
	public static void buildReportAll(ArrayList<Branch> brnchs) {
		int countSales = 0, count = 0;
		double totalSales = 0.0;
		StringBuilder builder = new StringBuilder();
		for (Branch brnch : brnchs) {
			for (Sale sale : brnch.getSales()) {
				totalSales += brnch.getSales().get(countSales).getCar().getValue();
				countSales++;
			}
			
			builder.append((count+1)+" - Filial: "+brnch.getStoreName()
				+" | Cliente: "+brnch.getSales().get(amountSales).getClnt().getName()
				+" | Carro: "+brnch.getSales().get(amountSales).getCar().getModel()
				+" | Valor: R$ "+brnch.getSales().get(amountSales).getCar().getValue()
				+"\n"
			);
			count++;
		}
		builder.append("\nQtd. Clientes: "+Client.getNumClients()+"\n");
		builder.append("Qtd. Vendas"+Sale.getNumSales()+"\n");
		builder.append("\nTOTAL: R$"+totalSales);
		String msg = builder.toString();
		View.exibirMsg("Relatorio Geral\n"+msg);
	}
	
	public static void buildReportBranch(Branch brnch) {
		
	}

	public void addBranch(Branch brnch) {
		brnchs.add(brnch);
	}
}
